@model CommonLayer.Model.Employee

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border-info box-shadow m-2 p-2">
            <h1 class="text-center font-weight-bold m-1">Edit</h1>

            <form asp-action="Edit" class=" p-1 m-2">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <input asp-for="EmployeeId" class="form-control" readonly />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeName" class="control-label"></label>
                    <input asp-for="EmployeeName" class="form-control" />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
                <div class="form-group edit_profile-radio-content">
                    <label asp-for="ProfileImage" class="control-label"></label>
                    <div class="profile">
                        @Html.RadioButtonFor(model => model.ProfileImage, "/Assets/male1.png", new { id = "male1" })
                        <img class="C_ProfileImg" src="/Assets/male1.png" />
                        @Html.RadioButtonFor(model => model.ProfileImage, "/Assets/female1.png", new { id = "female1" })
                        <img class="C_ProfileImg" src="/Assets/female1.png" />
                        @Html.RadioButtonFor(model => model.ProfileImage, "/Assets/male2.png", new { id = "male2" })
                        <img class="C_ProfileImg" src="/Assets/male2.png" />
                        <!-- Repeat for other images -->
                    </div>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <select asp-for="Department" class="form-control">
                        <option>IT</option>
                        <option>HR</option>
                        <option>Finance</option>
                        <option>Marketing</option>
                        <option>Quality</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <div>
                        Male
                        @Html.RadioButtonFor(model => model.Gender, "Male")
                        Female
                        @Html.RadioButtonFor(model => model.Gender, "Female")
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control joiningDate" type="date" onchange="validateJoiningDate()" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-info float-left" asp-action="Index">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary float-right" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/js/validate.js"></script>